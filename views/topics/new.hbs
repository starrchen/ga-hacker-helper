<div class="row">
  <h2>Create New Topic</h2>
  <form action="/topics" method="post" class='col s12'>
    <div class='section input-field'>
      <input type="text" name="name" class="validate">
      <label>Topic Name:</label>
    </div>

    <div class='section input-field'>
      <input type="text" name="description" class="validate">
      <label>Description:</label>
    </div>

    <div class='section input-field'>
      <input type="text" name="imageUrl" class="validate">
      <label>Image URL:</label>
    </div>
    <div class='center'>
      <button class="btn submit waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>

<script src="/js/user-auth.js"></script>
