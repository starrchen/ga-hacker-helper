<!-- Topic Info -->
<div class='center'>
  <h2 class='center' id='new-topic-header'>{{topic.name}}</h2>
  <h4 class="center">{{topic.description}}</h4>
</div>
<!-- Topic Edit -->
<div class='center section'>
  <a href="/topics/{{topic.id}}/edit" class="white-text btn submit hoverable" type="submit" name="action">Edit Topic
    <i class="material-icons right">send</i></a>
  </div>

  <!-- links -->
  <div class='container section'>
    <h4 class='center'>Links</h4>
    <!-- Topic links -->
    <div class='row center'>
      {{#each topic.links}}
      <div class='col m6 s12'>
        <div class='z-depth-3 card extra-small brown lighten-3'>
          <a target="_blank" href="{{url}}" class="secondary-content">
            <i class="material-icons indigo-text center text-darken-4">send</i></a>
            <h5 class="link-title"><a href='{{url}}'>{{title}}</a></h5>
            <p>{{summary}}</p>
            <!-- link delete -->
            <div class='card-action link-card-action'>
              <form method="post" class='center' action="/topics/{{../topic._id}}/links/{{id}}" onsubmit="return confirm('Are you sure you want to delete this link?')">
                <input type="hidden" name="_method" value="DELETE" />
                <button class="btn hoverable delete submit" type="submit" name="action">
                  <i class="material-icons delete">delete</i>
                </button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <!-- Topic Delete -->
    <div class='section'>
      <form method="post" class='center' action="/topics/{{topic.id}}" onsubmit="return confirm('Are you sure you want to delete this topic and all of its links?')">
        <input type="hidden" name="_method" value="DELETE"/>
        <button class="btn submit delete hoverable" type="submit" name="action">Delete topic
          <i class="material-icons right">delete</i>
        </button>
      </form>
    </div>
    <!-- add link -->
    <div class='container'>
      <div id="new-link" class="col s3 section center">
        <h3>New Link</h3>
        <form action="/topics/{{topic._id}}/links" method="post">
          <div class='section input-field'>
            <input type="text" name="title" id='title' class="validate">
            <label for="title">Title</label>
          </div>

          <div class='section input-field'>
            <input type="text" name="url" id='url' class="validate">
            <label for="url">URL</label>
          </div>

          <div class='section input-field'>
            <input type="text" name="summary" id='summary' class="validate">
            <label for="summary">Summary</label>
          </div>

          <div class='section input-field'>
            <input type="text" name="source" id='source' class="validate">
            <label for="source">Source</label>
          </div>
          <!-- add link -->
          <div class='center'>
            <button class="btn submit hoverable" type="submit" name="action">Add This Link
              <i class="material-icons right">add</i>
            </button>
          </div>
        </form>
      </div>
    </div>
